@model IEnumerable<HealthCenter.Domain.User>

@{
    ViewBag.Title = "Patients";
}

<h2>Patients</h2>

<table class="table table-striped table-hover table-responsive table-bordered">
    <tr>       
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            Patient type
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>        
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.ImagePath))
             {
             <img src="@Url.Content(item.ImageFullPath)" alt="Image" style="width:150px;height:150px;max-width: 100%; height: auto;" />
             }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserType.Name)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.UserId }, new {@class="btn btn-info"}) 
            @Html.ActionLink("Delete", "Delete", new { id = item.UserId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
