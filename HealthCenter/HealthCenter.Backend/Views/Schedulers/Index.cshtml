@model IEnumerable<HealthCenter.Domain.Scheduler>

@{
    ViewBag.Title = "Index";
}

<h2>Schedulers</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new {@class="btn btn-success"})
</p>
<center>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkDay.DateToday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.startHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.endHour)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.ApplicationUser_Id)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkDay.DateToday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.startHour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.endHour)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser_Id)
                    </td>*@
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AgendaId }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AgendaId }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AgendaId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</center>